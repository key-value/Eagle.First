

@model HtmlString

<script>
    var TrackPlanBody;
    $(document).ready(function ($) {

        TrackPlanBody = {
            TrackPlanList: ko.mapping.fromJS(@Model),
        }
        ko.applyBindings(TrackPlanBody, $("#TrackPlan-part")[0]);

        window.mainModel.checkTable('TrackPlanTable');
    });

</script>



<div id="TrackPlan-part" class="row">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="col-xs-12">
                        <div class="btn-group" data-bind="template:'sysbtn-Group-template'"></div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="TrackPlanTable" class="table ">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" class="cbr">
                                    </th>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>BeginTime</th>
                                    <th>EndTime</th>
                                </tr>
                            </thead>
                            <tbody class="middle-align" data-bind="foreach: TrackPlanBody.TrackPlanList">
                                <tr>
                                    <td>
                                        <input type="checkbox" data-bind="value: ID" class="cbr">
                                    </td>
                                    <td data-bind="text:$index()+1"></td>
                                    <td data-bind="text:Name"></td>
                                    <td data-bind="text:BeginTime"></td>
                                    <td data-bind="text:EndTime"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-md-12 text-center" data-bind="template:'page-template'">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/xenon-custom.js"></script>